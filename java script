// Quiz Toggle
document.getElementById('quiz-toggle').addEventListener('click', function() {
    const quiz = document.getElementById('quiz');
    quiz.classList.toggle('hidden');
});

// Quiz Submission
document.getElementById('quiz-form').addEventListener('submit', function(e) {
    e.preventDefault();
    const selected = document.querySelector('input[name="answer"]:checked');
    const result = document.getElementById('quiz-result');
    if (selected && selected.value === 'a') {
        result.textContent = 'Correct! Photosynthesis is how plants make food using sunlight.';
        result.style.color = 'green';
    } else {
        result.textContent = 'Oops! Try again. Hint: It involves sunlight and chlorophyll.';
        result.style.color = 'red';
    }
});

// Contact Form Validation
document.getElementById('contact-form').addEventListener('submit', function(e) {
    e.preventDefault();
    const name = document.getElementById('name').value.trim();
    const email = document.getElementById('email').value.trim();
    const message = document.getElementById('message').value.trim();
    const result = document.getElementById('form-result');
    
    if (!name || !email || !message) {
        result.textContent = 'Please fill in all fields.';
        result.style.color = 'red';
    } else if (!/\S+@\S+\.\S+/.test(email)) {
        result.textContent = 'Please enter a valid email.';
        result.style.color = 'red';
    } else {
        result.textContent = 'Message sent! We\'ll get back to you soon.';
        result.style.color = 'green';
        // In a real site, you'd send this to a server
        this.reset();
    }
});
